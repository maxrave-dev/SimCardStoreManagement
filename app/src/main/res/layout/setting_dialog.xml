<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refreshLayout">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/topAppBarLayout">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Cài đặt"
                app:navigationIcon="@drawable/baseline_close_24">

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/topAppBarLayout"
            android:padding="20sp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/rootLayout">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/appearanceLayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hiện thị"
                        android:textColor="@color/md_theme_light_primary"
                        android:layout_marginBottom="10sp">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10sp"
                        android:id="@+id/materialYouSetting">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Material You"
                                android:textSize="20sp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hiển thị chủ đề Material You với Dynamic Colors"
                                android:textSize="13sp">

                            </TextView>
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:layout_weight="4"
                            android:id="@+id/swMaterialYou" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/teamLayout"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nhóm"
                        android:textColor="@color/md_theme_light_primary"
                        android:layout_marginBottom="10sp">

                    </TextView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10sp"
                        android:id="@+id/teamSetting">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Đồ án môn Công nghệ phần mềm"
                                android:textSize="20sp">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hiển thị thành viên của nhóm và source code"
                                android:textSize="13sp">

                            </TextView>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/ivExpandDown"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5sp"
                            android:src="@drawable/baseline_keyboard_arrow_down_24"
                            android:contentDescription="@string/app_name"
                            android:visibility="visible">

                        </ImageView>

                        <ImageView
                            android:id="@+id/ivExpandUp"
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="5sp"
                            android:src="@drawable/baseline_keyboard_arrow_up_24"
                            android:contentDescription="@string/app_name"
                            android:visibility="gone">

                        </ImageView>
                    </RelativeLayout>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:checkable="true"
                        style="?attr/materialCardViewElevatedStyle"
                        android:id="@+id/cvExpandableView">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/ivAvatar"
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="5sp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img"
                                    app:shapeAppearanceOverlay="@style/circleImageView">

                                </com.google.android.material.imageview.ShapeableImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <TextView
                                        android:id="@+id/tvUserName"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Nguyễn Đức Tuấn Minh"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                    <TextView
                                        android:id="@+id/tvUserRole"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Developer"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?android:attr/textColorSecondary" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="5sp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img"
                                    app:shapeAppearanceOverlay="@style/circleImageView">

                                </com.google.android.material.imageview.ShapeableImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lê Bá Kha"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Developer"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?android:attr/textColorSecondary" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="5sp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img"
                                    app:shapeAppearanceOverlay="@style/circleImageView">

                                </com.google.android.material.imageview.ShapeableImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thân Trọng Đức"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Developer"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?android:attr/textColorSecondary" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="5sp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img"
                                    app:shapeAppearanceOverlay="@style/circleImageView">

                                </com.google.android.material.imageview.ShapeableImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Nguyễn Thị Thuý Nga"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Developer"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?android:attr/textColorSecondary" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="5sp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/img"
                                    app:shapeAppearanceOverlay="@style/circleImageView">

                                </com.google.android.material.imageview.ShapeableImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Trần Thành Đạt"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Developer"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?android:attr/textColorSecondary" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="40sp"
                                    android:layout_height="40sp"
                                    android:layout_margin="5sp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/github_mark"
                                    app:shapeAppearanceOverlay="@style/circleImageView">

                                </com.google.android.material.imageview.ShapeableImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="5dp">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Source Code"
                                        android:textAppearance="?attr/textAppearanceTitleSmall" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="github.com/maxrave-dev/SimCardStoreManagement"
                                        android:textAppearance="?attr/textAppearanceBodySmall"
                                        android:textColor="?android:attr/textColorSecondary" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
